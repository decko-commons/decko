#!/usr/local/bin/ruby

$stdout.sync = true
errors_filename = "./log/err.out"
err_out = File.new(errors_filename, "a")

ARGF.each_line do |l|
  error_section = false
  if error_section
    error_section = false if l =~ /^\s*$/
  elsif l =~ /^\s*\d+\)\s*$/
    error_section = true
  elsif l =~ /^\*{40,}$/ ||
        l =~ /^be removed from a future version of RSpec\.$/ ||
        l =~ /^\* simple_matcher is deprecated\.$/ ||
        l =~ %r{^\* please use Matcher DSL \(http://rspec\.rubyforge\.org/rspec/1\.3.0/classes/Spec/Matchers\.html\) instead\.$}
    err_out << l if err_out
    next
  elsif l =~ %r{^([.\[\]F*\s]*)((/| \(called from create_or_update_thumbnail|DEPRECATION WARN|The \{\{key\}\} interpolation syntax in|from /).*\n?$)}
    $stdout << Regexp.last_match(1)
    err_out << Regexp.last_match(2) if err_out
    next
  end
  $stdout << l
end
