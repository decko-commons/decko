
if ENV["REPO_TMPSETS"] && ENV["COVERAGE"] != "false"
  SimpleCov.start do
    root "<%= repo_path %>"

    add_filter "/spec/"
    add_filter "/features/"
    add_filter "/config/"
    add_filter "/tasks/"
    add_filter "/generators/"
    add_filter "_spec_helper"

    add_group "Card", "lib/card"
    add_group "Set Patterns", "/tmpsets/set_pattern/"
    add_group "Sets", "/tmpsets/set/"
    add_group "Formats", %r{\/format\/\w+_format}
    add_group "Chunks", "/chunk/"
  end
end