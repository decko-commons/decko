.accordion-item
  %h2.accordion-header.nodblclick
    %button.accordion-button{ type: "button",
                              class: ("collapsed" unless open),
                              "data-bs-toggle": "collapse",
                              "data-bs-target": "##{collapse_id}" }
      = title
  .accordion-collapse.collapse{ id: collapse_id, class: ("show" if open ) }
    - if subheader
      .accordion-subheader.bg-secondary.p-2.text-end
        = subheader
    .accordion-body
      = body
