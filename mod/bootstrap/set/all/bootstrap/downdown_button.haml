.btn-group{ class: opts[:extra_css_class], role: "group" }
  %button.btn.btn-primary.dropdown-toggle{"aria-expanded" => "false",
                                          "aria-haspopup" => "true",
                                          "data-bs-toggle" => "dropdown",
                                          title: name}
    = icon_tag opts[:icon] if opts[:icon]
    = name
    %span.caret
  = dropdown_list items, opts[:class], opts[:active]