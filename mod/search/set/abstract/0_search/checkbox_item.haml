- id = "#{card.key}-_-#{item_card.key}"
.w-100.d-flex.form-check.align-items-center
  = check_box_tag item_card.name, item_card.key, false,
                  class: "_checkbox-list-checkbox form-check-input p-1 me-3",
                  id: id
  %label.p-2.form-check-label{ for: id }
    = nest_item item_card
